{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "CMake: Build",
			"type": "shell",
			"command": "cmake",
			"args": [
				"--build",
				"build/Debug",
				"--target",
				"ferncli",
				"-j",
				"18"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": ["$gcc"]
		}
	]
}