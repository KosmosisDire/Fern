{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Fern",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/debug/bin/ferncli.exe",
			"args": "${input:args}",
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"preLaunchTask": "CMake: Build"
		},
	],
	"inputs": [
		{
			"id": "args",
			"type": "promptString",
			"description": "Command line arguments",
			"default": "minimal.fn"
		}
	]
}
